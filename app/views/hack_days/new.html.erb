<% provide(:title,"New Vote") %>
<div class="center hero-unit">
  <% if !flash[:error].nil? %>
    <div class="alert alert-error"><%= flash[:error] %></div>
  <% end %>
  <% if !flash[:notice].nil? %>
    <div class="alert alert-notice"><%= flash[:notice] %></div>
  <% end %>
  <h1>New Vote</h1>
  <%= form_for(@new_hack_day) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label " " %>
    <%= f.submit "Create a hack day", :class => "btn btn-large btn-primary" %>
  <% end %>
</div>


